<h1>Apply Leave</h1>

<%= form_with model: @leave_request, method: :post do |form| %>
  <div>
    <b><%= form.label :Start_Date %></b><br>
    <%= form.date_select :start_date %>
    <% @leave_request.errors.full_messages_for(:start_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <b><%= form.label :end_Date %></b><br>
    <%= form.date_select :end_date %>
    <% @leave_request.errors.full_messages_for(:end_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.label :reason %><br>
    <%= form.text_field :reason %><br>
    <% @leave_request.errors.full_messages_for(:reason).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
